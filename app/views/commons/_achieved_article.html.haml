= link_to article_achieved_article_path(article, achieved_article), {:style=>'color:black;text-decoration:none;'} do
  .card
    .user_info
      .user_avatar
        = image_tag achieved_article.user.avatar_image, class: 'article_user_avatar'
      .user_name
        = achieved_article.user.user_name
      .post_time
        = date_format(achieved_article.created_at)
    .card_bucket_list
      .card_title
        %div.title
          ãƒ»My Bucket List
        %div.bucket_list
          = achieved_article.title
        %div.bucket_list_image
          = image_tag achieved_article&.images[0] || 'logo.png', class: 'bucket_list_image'
      .card_item1
        .card_heart1
          = image_tag 'black_thumbs.png', class: 'thumbs_up_0'
          %span.number1= achieved_article.thumbs_ups.count
        .card_comment
          = image_tag 'comment.png', class: 'comment_mark'
          %span.number2= achieved_article.comments.count