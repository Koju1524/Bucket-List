.container
  %div.login-image 
    = image_tag 'social.png'
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :user_name, class: 'text'
      %br/
      = f.text_field :user_name, class: 'box'
    .field
      = f.label :email, class:'text'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'box'
    .field
      = f.label :password, class:'text'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'box'
    .field
      = f.label :password_confirmation, class:'text'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'box'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'
