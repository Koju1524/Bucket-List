.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :user_name, '・User Name', class: 'text'
      %br/
      = f.text_field :user_name, class: 'box'
    .field
      = f.label :email, '・E-mail', class:'text'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'box'
    .field
      = f.label :password, '・Password', class:'text'
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'box'
    .field
      = f.label :password_confirmation, '・Password-Confirmation', class:'text'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'box'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'
