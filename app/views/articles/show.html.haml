.card
  .user_info
    .user_avatar
      = image_tag 'hot.jpg', class: 'article_user_avatar'
    .user_name
      = current_user.user_name
    .post_time
      4 hour ago
    .dropdown
      = image_tag 'shape.png', class: 'dropbtn'
      .dropdown-content.mini1
        %a{:href => "#", :style=>'text-decoration:none;'} Edit
        %a{:href => "#", :style=>'text-decoration:none;'} Delete
  .card_bucket_list
    .card_detail
      %div.title
        ・My Bucket List 
      %div.content
        = @article.title
      %div.title
        ・Reason
      %div.content
        = @article.reason
      %div.title
        ・Necessary Stuff 
      %div.content
        = @article.necessary_stuff
      %div.title
        ・Expiration
      %div.content
        Until #{@article.expiration}
      %div.bucket_list_image
        - if @article.picture&.attached?
          = image_tag @article.picture, class: 'bucket_list_image'
        - else
          = image_tag 'beach.jpg', class: 'bucket_list_image'
    .card_iteam
      .card_heart
        = image_tag 'heart.png', class: 'heart_mark'
        %span.number= 7
      .card_comment
        = image_tag 'comment.png', class: 'comment_mark'
        %span.number= 8
      