.container
  = form_with(model: @achieved_article, url: article_achieved_article_path(@article, @achieved_article), method: 'put', local: true) do |f|
    %div
      = f.label :title, '・My Bucket List', class: 'title'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :impression, '・Impression(感想)', class: 'title'
    %div
      = f.text_area :impression, class: 'text'
    %div
      = f.label :advice, '・Advice (アドバイス)', class: 'title'
    %div
      = f.rich_text_area  :advice, class: 'text'
    %div
      = f.label :achieved_day, '・Achieved day (達成した日) ', class: 'title'
    %div
      = f.date_field :achieved_day, class: 'text'
    %div
      = f.label :pictures, '・Pictures', class: 'title'
    %div
      = f.file_field :pictures, class: 'text'
    = f.submit 'Submit', class: 'btn-primary'
